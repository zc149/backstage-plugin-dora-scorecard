{
  "name": "@jikwan/backstage-plugin-dora-scorecard-backend",
  "version": "1.0.1",
  "description": "Backend for Backstage DORA Scorecard plugin - collects and serves DORA metrics data",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "license": "Apache-2.0",
  "author": "jikwan",
  "repository": {
    "type": "git",
    "url": "https://github.com/zc149/backstage-plugin-dora-scorecard.git",
    "directory": "plugins/dora-scorecard-backend"
  },
  "keywords": [
    "backstage",
    "plugin",
    "backend",
    "dora",
    "metrics",
    "devops",
    "github",
    "deployment",
    "ci-cd"
  ],
  "publishConfig": {
    "access": "public",
    "main": "dist/index.cjs.js",
    "types": "dist/index.d.ts"
  },
  "backstage": {
    "role": "backend-plugin",
    "pluginId": "dora-scorecard",
    "pluginPackages": [
      "@jikwan/backstage-plugin-dora-scorecard",
      "@jikwan/backstage-plugin-dora-scorecard-backend"
    ]
  },
  "sideEffects": false,
  "scripts": {
    "build": "backstage-cli package build",
    "lint": "backstage-cli package lint",
    "test": "backstage-cli package test --passWithNoTests",
    "clean": "backstage-cli package clean",
    "prepack": "backstage-cli package prepack",
    "postpack": "backstage-cli package postpack"
  },
  "dependencies": {
    "@backstage/backend-plugin-api": "^1.5.0",
    "@backstage/catalog-client": "^1.9.0",
    "@backstage/config": "^1.3.6",
    "express": "^4.17.1",
    "node-fetch": "^2.6.7",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@backstage/cli": "^0.29.3",
    "@types/express": "^4.17.6",
    "@types/node": "^18",
    "@types/node-fetch": "^2.6.13"
  },
  "files": [
    "dist",
    "migrations/**/*.{js,d.ts}",
    "config.d.ts"
  ]
}
